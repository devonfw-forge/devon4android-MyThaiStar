<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/describe_filter_max_price"
        android:layout_width="264dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem ipsum dolor sit amet..." />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/seek_bar_price_tv"
        app:layout_constraintStart_toStartOf="@+id/describe_filter_max_price"
        app:layout_constraintTop_toBottomOf="@+id/describe_filter_max_price" />


    <Button
        android:id="@+id/accept_button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="@string/accept"
        app:layout_constraintEnd_toEndOf="@+id/describe_filter_max_price"
        app:layout_constraintStart_toStartOf="@+id/describe_filter_max_price"
        app:layout_constraintTop_toBottomOf="@+id/seek_bar" />

    <TextView
        android:id="@+id/seek_bar_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/describe_filter_max_price"
        app:layout_constraintTop_toBottomOf="@+id/describe_filter_max_price"
        tools:text="15" />
</android.support.constraint.ConstraintLayout>

